<Page x:Class="ExchangeOfCurrencies.Pages.AccountInfo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ExchangeOfCurrencies.Pages"
      xmlns:vm="clr-namespace:ExchangeOfCurrencies.MVVM.ViewModels"
      mc:Ignorable="d"
      Style="{StaticResource PageStyle}">
    <Page.DataContext>
        <vm:AccountInfoViewModel/>
    </Page.DataContext>
    
    <StackPanel Margin="5">
        <TextBlock Text="На вашем балансе: 0 руб."/>
        <TextBlock Text="Купленные валюты:"/>
    </StackPanel>
</Page>
