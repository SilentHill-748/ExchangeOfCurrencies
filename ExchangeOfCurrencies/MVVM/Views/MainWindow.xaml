<Window x:Class="ExchangeOfCurrencies.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExchangeOfCurrencies"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource WindowThemeStyle}"
        Title="MainWindow"
        Height="450"
        Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*" MinWidth="200"/>
            <ColumnDefinition Width="2"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Rectangle Grid.Column="1"
                   Fill="Black"/>

        <!--<Rectangle Grid.Column="0" Fill="#343243"/>-->

        <StackPanel Grid.Column="0" Background="#343243">
            <Button Content="Информация по счету"/>
            <Button Content="Отчёт"/>
            <Button Content="Купить/продать"/>
            <Button Content="Пополнить"/>
            <Button Content="Курсы валют"/>
        </StackPanel>

        <Frame Grid.Column="2" 
               NavigationUIVisibility="Hidden" 
               Name="PageContent"/>
    </Grid>
</Window>
