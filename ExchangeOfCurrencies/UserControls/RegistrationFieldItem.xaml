<UserControl x:Class="ExchangeOfCurrencies.UserControls.RegistrationFieldItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ExchangeOfCurrencies.UserControls"
             mc:Ignorable="d" 
             Name="RegistrationField">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="{Binding ElementName=RegistrationField, Path=SeparatorWidth}"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="{Binding ElementName=RegistrationField, Path=Text}"/>
        
        <TextBox Grid.Column="2" 
                 Style="{StaticResource TextBoxStyle}"/>
        
        <TextBlock Grid.Row="2"
                   Grid.Column="2"
                   FontSize="14"
                   Text="{Binding ElementName=RegistrationField, Path=Description}"
                   Visibility="{Binding ElementName=RegistrationField, Path=DescriptionVisibility}"
                   HorizontalAlignment="Right"/>
    </Grid>
</UserControl>
