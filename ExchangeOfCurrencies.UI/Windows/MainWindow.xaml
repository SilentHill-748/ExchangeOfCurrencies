<Window x:Class="ExchangeOfCurrencies.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExchangeOfCurrencies.UI"
        mc:Ignorable="d"
        Height="368" 
        Width="546" 
        WindowStartupLocation="CenterScreen" 
        Style="{StaticResource BlueWindow}">
    <Grid>
        <Rectangle 
            Style="{StaticResource Header}"
            x:Name="Header"
            MouseLeftButtonDown="Header_MouseLeftButtonDown"/>

        <Label 
            Content="Биржа валюты" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" 
            Foreground="#FF1D8FD1" 
            Margin="4,-2,0,0"
            FontSize="14"
            MouseLeftButtonDown="Header_MouseLeftButtonDown"/>

        <Image 
            x:Name="CloseBox"
            Style="{StaticResource CloseBox}"
            MouseDown="CloseBox_MouseDown" />

        <Grid Margin="0,25,0,0">

            <DataGrid x:Name="dataGrid" Width="458"/>
        </Grid>
    </Grid>
</Window>
