<Window x:Class="ExchangeOfCurrencies.UI.Windows.MessageWindows.Message"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExchangeOfCurrencies.UI.Windows.MessageWindows"
        mc:Ignorable="d"
        Height="171"
        Width="398"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource DarkWindow}">
    <Grid>
        <Rectangle 
            x:Name="Header" 
            Style="{StaticResource Header}"
            MouseLeftButtonDown="Header_MouseLeftButtonDown"/>

        <Label 
            x:Name="HeaderLabel" 
            Content="Внимание!" 
            Margin="0,-4,0,0"
            VerticalAlignment="Top" 
            HorizontalAlignment="Left"
            FontFamily="Segoe UI" 
            FontSize="16"/>

        <Image 
            Style="{StaticResource CloseBox}" 
            MouseLeftButtonDown="CloseBox_MouseLeftButtonDown"/>

        <Grid Margin="0,26,0,0">
            <ScrollViewer Margin="20,20,10,33" >
                <TextBlock 
                x:Name="MessageBlock"
                TextWrapping="Wrap" 
                Height="Auto" 
                Width="Auto"
                Foreground="White"
                FontSize="15" 
                TextAlignment="Justify"
                FontFamily="Segoe UI" 
                FontStyle="Normal"
                Block.IsHyphenationEnabled="True" LineStackingStrategy="BlockLineHeight"/>
            </ScrollViewer>

            <Label 
                x:Name="OkLabel"
                Content="Ок" 
                Style="{StaticResource MouseEvents}"
                FontSize="17"
                HorizontalAlignment="Left"
                Margin="298,105,0,0" 
                VerticalAlignment="Top"
                FontFamily="Segoe UI" 
                FontStyle="Normal"/>
        </Grid>
    </Grid>
</Window>
